{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2023",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "composite": true,
    "declarationMap": true,
    "incremental": true,
    "lib": ["es2023"]
  },
  "exclude": ["eslint.config.js"],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/common" },
    { "path": "./packages/taskmaster-interface" },
    { "path": "./packages/taskmaster" },
    { "path": "./packages/tasktracker-interface" },
    { "path": "./packages/tasktracker" },
    { "path": "./packages/taiga-api-interface" },
    { "path": "./packages/taiga-api" },
    { "path": "./packages/taiga-api-test" }
  ]
}
