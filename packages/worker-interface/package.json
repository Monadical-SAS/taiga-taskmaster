{
  "name": "@taiga-task-master/worker-interface",
  "version": "1.0.0",
  "type": "module",
  "description": "Worker interface definitions and schemas",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
