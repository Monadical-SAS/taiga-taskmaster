{
  "name": "@taiga-task-master/worker",
  "version": "1.0.0",
  "type": "module",
  "description": "Worker implementation for executing tasks using various worker strategies",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "vitest --config vitest.integration.config.ts",
    "cli": "node dist/cli/task-runner.js"
  },
  "dependencies": {
    "@taiga-task-master/worker-interface": "workspace:*",
    "@taiga-task-master/core": "workspace:*",
    "@taiga-task-master/common": "workspace:*",
    "simple-git": "^3.28.0",
    "effect": "^3.15.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.8.3",
    "vitest": "^2.0.0"
  }
}